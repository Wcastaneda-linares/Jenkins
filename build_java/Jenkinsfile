pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                // Realiza la extracción del código desde Git
                checkout scm
            }
        }

        stage('Test') {
            steps {
                dir('build_java') {
                    echo "Ejecutando pruebas con Maven"
                    bat "mvn clean compile test"
                }
            }
        }

        stage('Build application') {
            steps {
                dir('build_java') {
                    echo "Compilando la aplicación"
                    bat "mvn -f pom.xml clean install -Dmaven.test.skip=true" 
                    bat "tree" 
                }
            }
        }

        /*
        stage('Create docker image') {
            steps {
                echo "Creando la imagen de Docker"
                
            }
        }
        */
    }
}
